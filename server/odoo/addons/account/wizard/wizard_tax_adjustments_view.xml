<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_adjustments_wizard" model="ir.ui.view">
        <field name="name">tax.adjustments.wizard.form</field>
        <field name="model">tax.adjustments.wizard</field>
        <field name="arch" type="xml">
        <form>
            <h1>
                <field name="reason" class="oe_inline" placeholder="Reason for WO cancel"/>
            </h1>
            <group>
                <field name="reason"/>
            </group>
            <footer>
              <div>
                <button name="action_cancel_work_order" string="Cancel Work Order" type="object" class="oe_highlight"/>
                <button string="Cancel" class="oe_link" special="cancel" />
              </div>
            </footer>
        </form>
        </field>
    </record>
</odoo>
