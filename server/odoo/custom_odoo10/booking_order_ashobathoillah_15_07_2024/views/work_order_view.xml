<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="working_order_tree" model="ir.ui.view">
        <field name="name">working.order.tree</field>
        <field name="model">work.order</field>
        <field name="arch" type="xml">
            <tree string="Working Order">
                <field name="wo_number"/>
                <field name="booking_order_id"/>
                <field name="team_id"/>
                <field name="leader_id"/>
                <field name="member_ids"/>
                <field name="planned_start_date"/>
                <field name="planned_end_date"/>
                <field name="date_start_date"/>
                <field name="date_end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_working_order_calendar" model="ir.ui.view">
        <field name="name">working.order.calendar</field>
        <field name="model">work.order</field>
        <field name="arch" type="xml">
            <calendar string="Working Order" color="team_id" date_start="date_start_date">
                <field name="wo_number"/>
                <field name="booking_order_id"/>
                <field name="team_id"/>
                <field name="planned_start_date"/>
                <field name="planned_end_date"/>
                <field name="date_start_date"/>
                <field name="date_end_date"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="action_working_order_tree_view" model="ir.actions.act_window">
        <field name="name">Working Order</field>
        <field name="res_model">work.order</field>
        <field name="view_mode">tree,kanban,graph,form,calendar,pivot,graph</field>
        <field name="view_id" ref="working_order_tree"/>
        <field name="domain">[]</field>
    </record>

    <record model="ir.ui.view" id="work_order_view_form">
        <field name="name">work.order.view.form</field>
        <field name="model">work.order</field>
        <field name="arch" type="xml">
            <form string="Working Order">
                <header>
                    <field name="member_ids" widget="many2many_tags"/>
                    <field name="state" widget="statusbar"/>
                    <button name="action_start_work" string="Start Work" type="object" states="pending"/>
                    <button name="action_end_work" string="End Work" type="object" states="in_progress"/>
                    <button name="action_reset" string="Reset" type="object" states="in_progress"/>
                    <button name="%(booking_order_ashobathoillah_15_07_2024.cancel_work_order)d" string="Cancel" type="action" context="{'default_parent_id':active_id}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="wo_number" readonly="1" force_save="1"/>
                            <field name="booking_order_id"/>
                            <field name="team_id"/>
                            <field name="leader_id"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="planned_start_date"/>
                            <field name="planned_end_date"/>
                            <field name="date_start_date"/>
                            <field name="date_end_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem name="Working Order" id="menu_working_order_tree" parent="menu_booking" action="action_working_order_tree_view" sequence="26"/>

</odoo>
