<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <template id="work_order_template">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <table class="table table-bordered">
                    <tr>
                        <td style="width:100%" colspan="20">
                            <p><span t-field="o.wo_number"/></p>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:15%">
                            <p>Team Name :</p>
                        </td>
                        <td style="width:15%">
                            <p><span t-field="o.team_id"/></p>
                        </td>
                        <td style="width:15%">
                            <p>Customer :</p>
                        </td>
                        <td style="width:35%">
                            <p>Name: <span t-field="o.leader_id"/></p>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:15%">
                            <p>Booking Order Ref :</p>
                        </td>
                        <td style="width:15%">
                            <p><span t-field="o.booking_order_id"/></p>
                        </td>
                        <td style="width:15%">
                            <p>Date :</p>
                        </td>
                        <td style="width:35%">
                            <p><span t-field="o.date_start_date"/> - <span t-field="o.date_end_date"/> </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="height:40mm" colspan="20">
                            <p>Notes : <span t-field="o.notes"/></p>
                        </td>
                    </tr>
                    <tr>
                        <td style="height:25mm" colspan="20">
                            <p>Signature :</p>
                        </td>
                    </tr>
                </table>
            </div>
        </t>
    </t>
    </template>

    <report id="work_order_report"
            string="Work Order Report"
            model="work.order"
            report_type="qweb-pdf"
            name="booking_order_ashobathoillah_15_07_2024.work_order_template"
    />
</data>
</odoo>
