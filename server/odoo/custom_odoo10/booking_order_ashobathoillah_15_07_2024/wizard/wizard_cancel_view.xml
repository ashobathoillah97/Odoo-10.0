<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="work_order_wizard" model="ir.ui.view">
        <field name="name">work.order.wizard.form</field>
        <field name="model">work.order.wizard</field>
        <field name="arch" type="xml">
        <form>
            <h1>
                <field name="reason" class="oe_inline" placeholder="Cancelation Reason"/>
                <field name="parent_id" invisible="1"/>
            </h1>
            <footer>
              <div>
                <button name="action_cancel_work_order" string="Confirm" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="oe_link" special="cancel" />
              </div>
            </footer>
        </form>
        </field>
    </record>

    <record id="cancel_work_order" model="ir.actions.act_window">
        <field name="name">Work Order Wizard</field>
        <field name="res_model">work.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="work_order_wizard"/>
        <field name="target">new</field>
    </record>

</odoo>
